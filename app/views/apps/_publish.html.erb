<h2 id="type"></h2>
<h3 id="status"></h2>

<div class="card">
    <div class="card-header">
        Android
    </div>
    <table class="card-block table table-hover" id="android">
        <thead>
            <tr>
                <th>#</th>
                <th>Status</th>
                <th>Build</th>
                <th>Test</th>
                <th>Ready</th>
                <th>Updated on</th>
            </tr>
        </thead>
        <tbody id="builds">
            <% @app.builds.where(platform: 'android').last(5).reverse.each do |build| %>
              <%= raw build_to_html_table_row(build) %>
            <% end %>
        </tbody>
    </table>

    <div class="card-footer text-muted">
        <%= link_to "Publish", app_build_path(@app, :platform => 'android'), method: :post, :class => "btn btn-success" %>
    </div>
</div>

