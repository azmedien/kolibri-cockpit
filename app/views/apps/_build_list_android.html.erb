<section class="card">
    <div class="card-header">Android</div>
    <table class="card-block table table-hover" id="android">
        <thead>
            <tr>
                <th>App</th>
                <th>Status</th>
                <th>Details</th>
                <th>Step</th>
                <th>Message</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody id="builds">
            <% @app.builds.where(platform: 'android').last(5).reverse.each do |build| %>
              <%= raw build_to_html_table_row(@app, build) %>
            <% end %>
        </tbody>
    </table>

    <div class="card-footer text-muted">
        <%= form_tag(trigger_configure_app_path, method: :post) do |f| %>
          <%= hidden_field_tag 'platform', 'android' %>
          <div class="row">
            <div class="col-8">
              <div class="form-check form-check-inline">
                <%= check_box_tag 'channels[]', 'fabric', true, :class => 'form-check-input' %>
                <%= label_tag 'channels[]', 'Fabric Beta', :class => 'form-check-label' %>
              </div>
              <div class="form-check form-check-inline">
                <%= check_box_tag 'channels[]', 'play', false, :class => 'form-check-input' %>
                <%= label_tag 'channels[]', 'Google Play', :class => 'form-check-label' %>
              </div>
            </div>
            <div class="col-4 text-right">
                <%= submit_tag 'Publish', :class => "btn btn-success", data: {disable_with: "Publishing..."} %>
            </div>
        <% end %>
    </div>
</section>
