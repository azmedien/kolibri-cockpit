<%= form_for(app) do |f| %>
  <% if app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(app.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul>
      <% app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :internal_name %>
    <%= f.text_field :internal_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :runtime %>
    <%= f.text_area :runtime, :class => "jsoneditor-target form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :android_config %>
    <%= f.text_area :android_config, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ios_config %>
    <%= f.text_area :ios_config, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
