<%= content_tag :div, class: "modal fade", id: dom_id(@app, :modal) do %>
<%= form_tag app_autority_invite_path(@app) do %>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Invite user to <%= @app.internal_name %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <%= label_tag 'app[invite]', "Email address", :class => "form-control-label" %><br/>
        <%= email_field_tag 'app[invite]', '', :class => "form-control" %>
      </div>
      <div class="form-group btn-group btn-group-toggle" data-toggle="buttons">
        <%= label_tag(:create_new, "Admin", :class => "btn btn-outline-primary active", :id => "role_admin") do %>
          <%= radio_button_tag(:role, "admin", true) %> Admin
        <% end %>
        <%= label_tag(:create_existing, "Push notification manager", :class => "btn btn btn-outline-primary", :id => "role_notifier") do %>
          <%= radio_button_tag(:role, "notifier") %> Push notification manager
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= submit_tag "Invite", method: :post, :class => "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>
<% end %>
