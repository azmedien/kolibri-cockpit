<main>
  <div class="list-group">

    <%= link_to(new_app_asset_path, remote: true, data: { modal: true }, :class => 'list-group-item active justify-content-between') do %>
    <div class="d-flex w-100 justify-content-end align-items-center">
      <i class="fa fa-plus mr-2" aria-hidden="true"></i>
      <span class="mr-auto">Add new assets</span>
    </div>
    <% end %>
    <% @assets.each do |asset| %>
    <div class="list-group-item list-group-item-action flex-column">
      <div class="d-flex w-100 justify-content-end align-items-center">
        <%= link_to(edit_app_asset_path(@app, asset), remote: true, data: { modal: true }, :class=>'d-flex w-100') do %>
        <span class="mr-2"><%= raw assets_content_type_icon(asset, 32) %></span>
        <span class="mr-auto align-self-center"><%= asset.file_identifier %></span>
        <% end %>
        <div class="btn-group" role="group" aria-label="Asset actions">
          <%= link_to 'Edit', edit_app_asset_path(@app, asset), remote: true, data: { modal: true }, method: :get, :class => "btn btn-sm btn-outline-primary" %>
          <%= link_to 'Destroy', [@app, asset], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</main>
