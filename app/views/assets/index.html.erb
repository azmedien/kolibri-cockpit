<main>
    <div class="list-group">

      <%= link_to(new_app_asset_path, remote: true, :class => 'list-group-item active justify-content-between') do %>
      <div class="d-flex w-100 justify-content-end align-items-center">
        <i class="fa fa-plus p-2" aria-hidden="true"></i>
        <span class="mr-auto p-2">Add new assets</span>
      </div>
      <% end %>
        <% @assets.each do |asset| %>
        <div class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-end align-items-center">
          <%= link_to(edit_app_asset_path(@app, asset), :class=>'d-flex w-100') do %>
          <span class="p-2">
              <%= raw assets_content_type_icon(asset, 32) %>
          </span>
          <span class="mr-auto p-2"><%= asset.file_identifier %></span>
          <% end %>
          <span class="p-2"><%= button_to 'Edit', edit_app_asset_path(@app, asset), method: :get, :class => "btn btn-outline-primary" %></span>
          <span class="p-2"><%= button_to 'Destroy', [@app, asset], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></span>
        </div>
</div>
        <% end %>
    </div>
</main>
