<main>
<div class="list-group">
    <%= link_to "New assets", new_app_asset_path, :class => "list-group-item active" %>
    <% @assets.each do |asset| %>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-end">
            <div class="mr-auto p-2">
              <%= image_tag(asset.file.url, size: "32", :class => "img-responsive rounded-circle")%>
              <%= asset.file %></a>
            </div>
            <%= button_to 'Edit', edit_app_asset_path(@app, asset), method: :get, :class => "btn btn-outline-primary" %>
            <%= button_to 'Destroy', [@app, asset], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %>
        </div>
    </div>
    <% end %>
</div>
</main>
