fastlane_version "2.38.1"

default_platform :android

platform :android do
  before_all do
    ENV["SLACK_URL"] = "https://hooks.slack.com/services/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"
    ENV["KOLIBRI_URL"] = "https://kolibri.herokuapp.com"
    ENV["KOLIBRI_PROJECT"] = "<%= app.internal_id %>"
  end

  desc "Kolibri Build & Test"
  lane :all do
    build
    test
  end

  lane :beta do
    build
    test
    publish
  end

  desc "Runs all the tests"
  lane :test do
    kolibri(
      stage: "test",
      message: "Running all the tests..."
    )

    gradle(task: "test")

    kolibri(
      stage: "test",
      message: "All tests passed.",
      code: 1
    )
  end

  desc "Build the project"
  lane :build do

    kolibri(
      stage: "build",
      message: "Building project..."
    )

    gradle(task: "assembleRelease", flags: "-q")

    kolibri(
      stage: "build",
      message: "Build successful",
      code: 1
    )
  end

  desc "Publish to Fabric and Google Play"
  lane :publish do

    kolibri(
      stage: "publish",
      message: "Publishing app to Fabric...",
    )

    crashlytics(
       api_token: "5b0e4ca8fe72e1ad97ccbd82e18f18ba4cacd219",
       build_secret: "8f94e66fae0366a48a613623166a2586ae77e7fab1b68d021471e0036ba46ad8"
    )

    kolibri(
      stage: "publish",
      message: "Successfully published to Fabric",
    )

    sleep(10)

    kolibri(
      stage: "publish",
      message: "Publish app to Google Play as a Beta...",
    )

    supply(track: 'beta')

    kolibri(
      stage: "publish",
      message: "Application beta is published to Google Play",
      code: 1
    )
  end

  after_all do |lane|
    # This block is called, only if the executed lane was successful

    slack(
     message: "Successfully builded and tested"
    )
  end

  error do |lane, exception|

    error = %{Something goes wrong...
      #{exception.message}
    }

    kolibri(
      stage: lane.to_s,
      message: error,
      code: -1
    )

    slack(
      message: exception.message,
      success: false
    )
  end
end
