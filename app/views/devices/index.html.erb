<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Token</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.token %></td>
        <td><%= device.platform %></td>
        <td><%= link_to 'Edit', edit_app_device_path(@app, device) %></td>
        <td><%= link_to 'Destroy', [@app, device], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_app_device_path %>
